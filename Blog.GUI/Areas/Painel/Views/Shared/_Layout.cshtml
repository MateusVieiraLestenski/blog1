<body>
    <section id="container">
        <!--header start-->
        <header class="header fixed-top clearfix">
            <!--logo start-->
            <div class="brand">
                <a href="@Url.Action("Dashboard","Home",new{Area="Painel"})" class="logo">
                    <img src="~/Content/Panel/Bucket/img/logo.png" alt="">
                </a>
                <div class="sidebar-toggle-box">
                    <div class="fa fa-bars"></div>
                </div>
            </div>
            <!--logo end-->

            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-nav clearfix">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder=" Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        @{
                            var usuario = Seguranca.Usuario();
                        }

                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="username">@usuario.Nome</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li><a href="@Url.Action("Editar","Autor", new { Area = "Painel"})"><i class=" fa fa-suitcase"></i>Profile</a></li>
                            <li><a href="@Url.Action("Lock","Home", new { Area = "Painel"})"><i class="fa fa-key"></i> Bloquear</a></li>
                            <li><a href="@Url.Action("Sair","Home")"><i class="fa fa-key"></i> Sair</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse">
                <!-- sidebar menu start-->
                <div class="leftside-navigation">
                    <ul class="sidebar-menu" id="nav-accordion">
                        <li>
                            <a class="active" href="@Url.Action("Dashboard", "Home", new {Area = "Painel"})">
                                <i class="fa fa-dashboard"></i>
                                <span>Inicio</span>
                            </a>
                        </li>

                        <li>
                            <a class="" href="@Url.Action("Index", "Post", new {Area = "Painel"})">
                                <i class="fa fa-bullhorn"></i>
                                <span>Post</span>
                            </a>
                        </li>
                        <li>
                            <a class="" href="@Url.Action("Index", "Categoria", new {Area = "Painel"})">
                                <i class="fa fa-archive"></i>
                                <span>Categoria</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->

        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    @RenderBody()
                </div>
            </section>
        </section>
    </section>
